[report]
show_missing = false
skip_covered = true
skip_empty = true

[run]
# Ensure all python modules in preditor have their coverage reported,
# not just files that pytest touches.
source = preditor
omit =
    */site-packages/*
    tests/*
    # This file is automatically generated by setuptools_scm
    preditor/version.py
parallel=True
relative_files=True
data_file=.coverage/.coverage
